@model MvcWebApp.Models.AdesioneModel
@{
    ViewBag.Title = "ModificaAdesione";
}

<!--form edit 1-->
@using (Ajax.BeginForm("SalvaAdesione", "AdesioneCollettiva", new AjaxOptions
  {
      UpdateTargetId = "risultati",
      InsertionMode = InsertionMode.Replace,
      HttpMethod = "POST",
      OnSuccess="",
      OnFailure=""

  }))
{
<div class="Form Form--spaced u-layout-r-withGutter u-padding-top-xxl u-text-r-xs">
    <fieldset class="Form-fieldset">
        <legend class="Form-legend color-primo">Scheda posizione assicurativa ID: 12345678</legend>
        <section class="Grid Grid--withGutter">
            <div class="Grid-cell u-md-size1of4 u-lg-size1of4 u-margin-top-l ">

                <div class="Form-field">
                    <label class="Form-label is-required" for="Cognome">Cognome</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="Cognome" name="Soggetto.Cognome" aria-required="true" required value ="@Model.Soggetto.Cognome">
                </div>
            </div>
            <div class="Grid-cell u-md-size1of4 u-lg-size1of4 u-margin-top-l">
                <div class="Form-field">
                    <label class="Form-label is-required" for="ente">Ente</label>
                    <select class="Form-input u-text-r-s u-borderRadius-m" id="provincia" aria-required="true" required>
                        <option disabled selected>seleziona</option>
                        <option>MO</option>
                        <option>MI</option>
                        <option>ME</option>
                        <option>MB</option>
                    </select>
                </div>
            </div>
            <div class="Grid-cell u-md-size1of4 u-lg-size1of4 u-margin-top-l">
                <div>
                    <label class="Form-label is-required" for="nome">Descrizione legame</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="descrizione legame" aria-required="true" required>
                </div>
            </div>
            <div class="Grid-cell u-md-size1of4 u-lg-size1of4 u-margin-top-l">
                <div class="Form-field">
                    <label class="Form-label is-required" for="DataNascita">Data di nascita</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="DataNascita" aria-required="true" required name="Soggetto.DataNascita" value="@Model.Soggetto.DataNascita">
                </div>
            </div>
            <div class="Grid-cell u-md-size1of4 u-lg-size1of4">
                <div class="Form-field">
                    <label class="Form-label is-required" for="Nome">Nome</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="Nome" name="Soggetto.Nome" aria-required="true" required value="@Model.Soggetto.Nome">
                </div>
            </div>
            <div class="Grid-cell u-md-size1of4 u-lg-size1of4">
                <div class="Form-field">
                    <label class="Form-label is-required" for="CodiceFiscale">Codice fiscale</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="CodiceFiscale" name="Soggetto.CodiceFiscale" aria-required="true" required value="@Model.Soggetto.CodiceFiscale">
                </div>
            </div>
            <div class="Grid-cell u-md-size1of4 u-lg-size1of4">
                <div class="Form-field">
                    <label class="Form-label is-required" for="nome">Luogo di nascita</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="nascita" aria-required="true" required>
                </div>
            </div>
            <div class="Grid-cell u-md-size1of4 u-lg-size1of4">
                <div class="Form-field">
                    <label class="Form-label is-required" for="CFCapoNucleo">CF capo nucleo</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="CFCapoNucleo" name="CFCapoNucleo" aria-required="true" required value="@Model.CFCapoNucleo">
                </div>
            </div>
        </section>
    </fieldset>
</div>

<!--form edit 2-->

<div class="Form Form--spaced u-layout-r-withGutter u-padding-top-xxl u-text-r-xs">
