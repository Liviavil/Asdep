                    <input class="Form-input u-text-r-s u-borderRadius-m" id="domicilio" aria-required="true" required>
                </div>
            </div>*@

            <div class="Grid-cell u-md-size1of4 u-lg-size1of4">
                <div class="Form-field">
                    <label class="Form-label is-required" for="CapResidenza">Cap</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="CapResidenza" name="Soggetto.CapResidenza" aria-required="true" required value="@Model.Soggetto.CapResidenza">
                </div>
            </div>

            <div class="Grid-cell u-md-size1of4 u-lg-size1of4">
                <div class="Form-field">
                    <label class="Form-label is-required" for="Email">Email</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="Email" name="Soggetto.Email" aria-required="true" required value="@Model.Soggetto.Email">
                </div>
            </div>

            <div class="Grid-cell u-md-size1of4 u-lg-size1of4">
                <div class="Form-field">
                    <label class="Form-label is-required" for="Eta">Età</label>
                    <input class="Form-input u-text-r-s u-borderRadius-m" id="Eta" name="Eta" aria-required="true" required value="@Model.Eta">
                </div>
            </div>

        </section>

    </fieldset>

</div>

